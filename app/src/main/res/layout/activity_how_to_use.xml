<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F5E6FF"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header with back arrow and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to use"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Toggle buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTrace"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_item_tab"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="@string/trace"
            android:textColor="@color/onPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSketch"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_tab"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="@string/sketch"
            android:textColor="@color/onPrimary"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp">

        <VideoView
            android:layout_width="240dp"
            android:layout_height="360dp" />
    </androidx.cardview.widget.CardView>

    <!-- Title and description -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/trace_drawing"
        android:textColor="@color/onPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/secure_your_phone_using_a_tripod_a_glass_or_even_a_stack_of_books_to_keep_it_steady_while_you_draw"
        android:textColor="#666666"
        android:textSize="14sp" />

    <!-- Action button -->
    <TextView
        style="@style/mHeading.P0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_30_stroke_languagebtn"
        android:elevation="2dp"
        android:paddingVertical="16dp"
        android:text="@string/i_got_it"
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>