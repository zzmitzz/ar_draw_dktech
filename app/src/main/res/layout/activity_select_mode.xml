<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/primary"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_the_nmode_drawing"
        android:textSize="22sp"
        style="@style/mHeading.P0"
        android:textStyle="bold"
        android:textColor="@color/onPrimary"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:id="@+id/trace_drawing"
            android:layout_width="0dp"
            android:layout_height="430dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_20_state"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">
                <VideoView
                    android:layout_width="match_parent"
                    android:layout_height="260dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trace_drawing_n"
                android:textSize="18sp"
                android:paddingStart="8dp"
                android:textStyle="bold"
                android:textColor="#2D2D2D"
                android:gravity="start"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/secure_your_phone_using_a_tripod_a_glass_or_even_a_stack_of_books_to_keep_it_steady_while_you_draw"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:paddingStart="8dp"
                android:gravity="start"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sketch_drawing"
            android:layout_width="0dp"
            android:layout_height="430dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_20_state"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">
                <VideoView
                    android:layout_width="match_parent"
                    android:layout_height="260dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sketch_drawing_n"
                android:textSize="18sp"
                android:paddingStart="8dp"
                android:textStyle="bold"
                android:textColor="#2D2D2D"
                android:gravity="start"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/place_a_sheet"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:paddingStart="8dp"
                android:gravity="start"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/ivDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue_btn"
        android:textSize="16sp"
        android:paddingVertical="18dp"
        style="@style/mHeading.P0"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/onPrimary"
        android:background="@drawable/bg_radius_20_stroke_languagebtn"
        android:elevation="2dp"
        android:layout_marginTop="16dp" />

</LinearLayout>

